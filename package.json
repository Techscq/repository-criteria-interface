{
  "name": "repository-criteria-interface",
  "version": "0.0.1",
  "license": "MIT",
  "description": "A library providing an interface for the Repository Pattern with powerful data filtering and join capabilities using a criteria module and adapter-based architecture.",
  "keywords": [
    "repository",
    "pattern",
    "data-access",
    "orm",
    "database",
    "query",
    "filter",
    "criteria",
    "join",
    "adapter",
    "data-source-agnostic"
  ],
  "main": "./dist/index.js",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "ci": "npm run check-format && npm run check-exports && npm run test",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "test": "vitest run",
    "dev": "vitest"
  },
  "homepage": "https://github.com/Techscq/repository-criteria-interface",
  "bugs": {
    "url": "https://github.com/Techscq/repository-criteria-interface/issues"
  },
  "author": "Nelson Cabrera <contact@nelsoncabrera.dev>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Techscq/repository-criteria-interface.git"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "type": "module",
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.1",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.0"
  }
}
